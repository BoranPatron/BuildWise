# BuildWise - Beispiel-Umgebungsvariablen
# Kopieren Sie diese Datei zu .env und passen Sie die Werte an

# Datenbank-Konfiguration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=buildwise
DB_USER=postgres
DB_PASSWORD=your_secure_password

# JWT-Konfiguration
JWT_SECRET_KEY=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Anwendungseinstellungen
DEBUG=True
ENVIRONMENT=development

# E-Mail-Konfiguration (für zukünftige Funktionen)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@buildwise.com
FROM_NAME=BuildWise

# Datei-Upload-Einstellungen
MAX_FILE_SIZE=10485760  # 10MB in Bytes
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,docx,xlsx

# CORS-Einstellungen (für Produktion anpassen)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=INFO

# Redis (für zukünftige Caching-Funktionen)
REDIS_URL=redis://localhost:6379

# Elasticsearch (für zukünftige Suchfunktionen)
ELASTICSEARCH_URL=http://localhost:9200

# AWS S3 (für zukünftige Cloud-Speicherung)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-central-1
S3_BUCKET_NAME=buildwise-documents

# Stripe (für zukünftige Zahlungsabwicklung)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key 